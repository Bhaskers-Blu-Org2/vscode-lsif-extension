{
	"name": "lsif",
	"description": "Language Server Index Format extension",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Microsoft/vscode-lsif-extension.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-lsif-extension/issues"
	},
	"publisher": "ms-vscode",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.33.0"
	},
	"activationEvents": [
		"onFileSystem:lsif",
		"onCommand:lsif.openDatabase"
	],
	"enableProposedApi": true,
	"main": "./client/out/extension",
	"contributes": {
		"commands": [
			{
				"command": "lsif.openDatabase",
				"title": "Open LSIF Database"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Index Format configuration",
			"properties": {
				"lsif.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && yarn install && cd ../server && yarn install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0",
		"typescript": "^3.3.4000"
	}
}
